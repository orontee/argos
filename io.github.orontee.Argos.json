{
    "app-id" : "io.github.orontee.Argos",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "46",
    "sdk" : "org.gnome.Sdk",
    "command" : "argos",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--talk-name=org.freedesktop.Notifications"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        "pypi-dependencies.yaml",
        {
            "name": "webp-pixbuf-loader",
            "buildsystem": "meson",
            "build-options": {
                "env": {
                    "GDK_PIXBUF_MODULEDIR": "/app/lib/gdk-pixbuf/2.10.0/"
                }
            },
            "config-opts": [
                "-Dgdk_pixbuf_moduledir=/app/lib/gdk-pixbuf/2.10.0/"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/aruiz/webp-pixbuf-loader.git",
                    "commit": "e11fb34385c94255f8aec3f9c731a1310be89df6",
                    "tag": "0.2.3"
                }
            ],
            "post-install": [
                "gdk-pixbuf-query-loaders > $GDK_PIXBUF_MODULEDIR/loaders.cache"
            ]
        }, {
            "name" : "argos",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources": [{
                "type": "dir",
                "path": "."
            }]
        }
    ]
}
