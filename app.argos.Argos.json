{
    "app-id" : "app.argos.Argos",
    "runtime" : "org.gnome.Sdk",
    "runtime-version" : "41",
    "sdk" : "org.gnome.Sdk",
    "command" : "argos",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--talk-name=org.freedesktop.Notifications"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        "generated-poetry-sources.json",
        {
            "name" : "argos",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources": [{
                "type": "dir",
                "path": "."
            }]
        }
    ]
}
